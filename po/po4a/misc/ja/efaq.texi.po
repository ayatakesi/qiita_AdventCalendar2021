"# csh commands:\n"
"setenv EDITOR emacsclient\n"
"\n"
msgstr ""
"# cshの場合:\n"
"setenv EDITOR emacsclient\n"
"\n"

#. type: example
#: ../../../../misc/efaq.texi:2045
#, no-wrap
msgid ""
"# using full pathname\n"
"setenv EDITOR /usr/local/emacs/etc/emacsclient\n"
"\n"
msgstr ""
"# フルパス名を使用\n"
"setenv EDITOR /usr/local/emacs/etc/emacsclient\n"
"\n"

